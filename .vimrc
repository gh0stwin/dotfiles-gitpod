set nocompatible
inoremap jj <Esc>

set ttyfast
set esckeys
set backspace=indent,eol,start

set encoding=utf-8
set fileencoding=utf-8

set viminfo+=n~/.vim/viminfo
set backupdir=~/.vim/backup
set directory=~/.vim/swap
set undodir=~/.vim/undo
set undofile

set number

syntax enable
set showmatch
set t_Co=256

set cursorline
set tabstop=2

set shiftwidth=2

set expandtab
set ruler
